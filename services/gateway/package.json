{
  "name": "@ocr-service/gateway",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "concurrently -n gateway,worker -c blue,green \"bun --watch src/gateway.ts\" \"bun --watch src/worker.ts\"",
    "dev:gateway": "bun --watch src/gateway.ts",
    "dev:worker": "bun --watch src/worker.ts",
    "start:gateway": "NODE_ENV=production bun src/gateway.ts",
    "start:worker": "NODE_ENV=production bun src/worker.ts",
    "build": "bun build src/gateway.ts --outdir dist/gateway --target=bun && bun build src/worker.ts --outdir dist/worker --target=bun",
    "build:gateway": "bun build src/gateway.ts --outdir dist/gateway --target=bun",
    "build:worker": "bun build src/worker.ts --outdir dist/worker --target=bun",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.47.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@scalar/hono-api-reference": "^0.9.25",
    "bullmq": "^5.64.1",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.6",
    "ioredis": "^5.8.2",
    "jimp": "^1.6.0",
    "jsqr": "^1.4.0",
    "ky": "^1.14.0",
    "minio": "^8.0.6",
    "nanoid": "^5.1.6",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "zod": "^4.1.12"
  }
}
